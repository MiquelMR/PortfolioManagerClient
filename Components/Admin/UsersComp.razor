@using PortfolioManagerWASM.Models

@if (Users != null)
{
    <table class="table align-middle">
        <thead>
            <tr>
                <th>User</th>
                <th>Email</th>
                <th>RegistrationDate</th>
                <th>Role</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (User user in Users)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.RegistrationDate</td>
                    <td>@user.Role</td>
                    <td><button class="btn btn-primary" @onclick="()=>OnDeleteUser(user)">Delete</button></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-danger fw-bold text-center">You don’t have permission to view this page</p>
}



